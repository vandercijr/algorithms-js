{
  "env" : {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends" : ["eslint:recommended",  "prettier", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules" : {
    "no-useless-escape": 0,
    "no-unused-vars": "error",
    "indent"  : [
      "error",
      2
    ],
    "linebreak-style" : [
      "error",
      "unix"
    ],
    "quotes"  : [
      "error",
      "single"
    ],
    "semi"  : [
      "error",
      "always"
    ],
    "plugins": ["prettier"],
    "prettier/prettier": "error",
    "max-len": ["error", { "code": 120, "ignoreTrailingComments": true }],
  }
}
